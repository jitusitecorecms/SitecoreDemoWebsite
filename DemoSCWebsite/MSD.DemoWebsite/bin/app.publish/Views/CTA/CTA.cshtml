@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation

@{ 
    var childItems = Model.GetChildren();
}
<div class="cta">
@foreach (var item in childItems)
{
    <div class="cta-item">
        @Html.Sitecore().Field("Thumbnail", item)
        <h3>@Html.Sitecore().Field("Title", item)</h3>
        <p>@Html.Sitecore().Field("Description", item)</p>
        @Html.Sitecore().Field("Link", item)
    </div>
}
</div>